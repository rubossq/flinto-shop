@import "libs/helpers"

body, a
  color: black

a:hover
  text-decoration: none;

.logo
  font-size: 26px

header
  background-color: #f0f1f3
  & nav
    max-width: 1170px

.navbar-nav a
    font-size: 16px

.icon
  font-size: 28px

.icon-btn
  @extends .icon
  border: 0
  background-color: transparent
  outline: none
  user-select: none;
  cursor: pointer

.cart-count
  color: white
  background-color: #ff3b30
  bottom: 0
  width: 20px
  height: 20px
  right: 0

.cart-count-text
  font-size: 14px


.not-active
  color: #787879




