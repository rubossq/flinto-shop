<aside class="col-4 col-md-3 h-100">
    <header class="container-fluid no-gutters p-0">
        <div class="row no-gutters">
            <div class="bg-black col-12 py-4 px-3 text-center">
                <span class="f-medium big-text text-white">Admin panel</span>
            </div>
        </div>
    </header>
    <nav class="nav-panel pt-3 bg-dark w-100 h-100">
        <a href="/admin" class="{{#if expandMain}}bg-blue{{/if}}">
            <div>
                <ion-icon class="align-middle big-text" name="home"></ion-icon>
                <span class="align-middle">Dashboard</span>
            </div>
        </a>
        <div>
            <a class="{{#if expandCategories}}bg-blue{{/if}}" href="#" data-toggle="collapse"
               data-target="#categories-nav-block" aria-expanded="{{#if expandCategories}}true{{else}}false{{/if}}"
               aria-controls="categories-nav-block">
                <div>
                    <ion-icon class="align-middle big-text" name="list"></ion-icon>
                    <span class="align-middle">Categories</span>
                </div>
                <div class="big-text align-middle arrow">
                    <ion-icon name="arrow-dropright"></ion-icon>
                </div>
            </a>
            <div id="categories-nav-block" class="{{#unless expandCategories}}collapse{{/unless}}">
                <div class="pl-4">
                    <a href="/admin/catalog" class="">
                        <div>
                            <ion-icon class="align-middle big-text" name="paper"></ion-icon>
                            <span class="align-middle">Categories list</span>
                        </div>
                    </a>
                </div>
                <div class="pl-4">
                    <a href="/admin/catalog/edit" class="">
                        <div>
                            <ion-icon class="align-middle big-text" name="add-circle-outline"></ion-icon>
                            <span class="align-middle">Add Category</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div>
            <a class="{{#if expandItems}}bg-blue{{/if}}" href="#" data-toggle="collapse" data-target="#items-nav-block"
               aria-expanded="{{#if expandItems}}true{{else}}false{{/if}}"
               aria-controls="items-nav-block">
                <div>
                    <ion-icon class="align-middle big-text" name="list-box"></ion-icon>
                    <span class="align-middle">Items</span>
                </div>
                <div class="big-text align-middle arrow">
                    <ion-icon name="arrow-dropright"></ion-icon>
                </div>
            </a>
            <div id="items-nav-block" class="{{#unless expandItems}}collapse{{/unless}}">
                <div class="pl-4">
                    <a href="/admin/catalog/items" class="">
                        <div>
                            <ion-icon class="align-middle big-text" name="paper"></ion-icon>
                            <span class="align-middle">Items list</span>
                        </div>
                    </a>
                </div>
                <div class="pl-4">
                    <a href="/admin/catalog/items/edit" class="">
                        <div>
                            <ion-icon class="align-middle big-text" name="add-circle-outline"></ion-icon>
                            <span class="align-middle">Add Item</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <a href="/admin/logout">
            <div>
                <ion-icon class="align-middle big-text" name="exit"></ion-icon>
                <span class="align-middle">Logout</span>
            </div>
        </a>
    </nav>
</aside>