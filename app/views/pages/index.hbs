{{>search}}
{{>action}}
<header class="image-bg" style="background-image: url('images/header.png')">
    {{>nav}}
    <div class="mt-10 text-center pb-10 f-medium">
        <span class="mb-3 header-text f-light">New Arrivals</span>
        <div class="row no-gutters d-flex justify-content-center">
            <div class="col-12 col-md-5 text-md-right text-center">
                <a class="underline" href="#">Women's Collection</a>
            </div>
            <div class="col-12 col-md-1">
                <ion-icon class="icon align-bottom px-3" name="hourglass"></ion-icon>
            </div>
            <div class="col-12 col-md-5 text-md-left text-center">
                <a class="underline" href="#">&nbsp; Men's Collection &nbsp;</a>
            </div>

        </div>
    </div>
</header>
<main class="mt-4 mx-auto">
    <div class="container no-gutters mx-auto">
        <div class="row">
            <div class="col-12 col-md-4 px-0">
                <div class="block-l-t image-bg position-relative border-hover" style="background-image: url('images/woman.jpg')">
                    <div class="text-right position-absolute text-l-t very-big-text">
                        <span class="emerald">for</span>
                        <br>
                        <span class="f-medium">Women</span>
                    </div>
                </div>
                <div class="block-l-b image-bg position-relative border-hover mt-3" style="background-image: url('images/hat.jpg')">
                    <div class="position-absolute text-l-b sub-header-text mx-auto text-center">
                        <span class="emerald text-white">Trending items</span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4 px-0">
                <div class="block-m-t image-bg border border-dark position-relative border-hover" style="background-image: url('images/best.jpg')">
                    <div class="position-absolute text-m-t header-2-text mx-auto text-center">
                        <span class="emerald text-white">Best Deals</span>
                    </div>
                </div>

                <div class="block-m-b image-bg position-relative border-hover mt-3" style="background-image: url('images/watch.jpg')">
                    <div class="position-absolute add2cart text-center">
                        <a class="bg-white p-3 f-semibold big-text" href="javascript:void(0)">
                            <span>Accessoires</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4 px-0">
                <div class="block-r-t image-bg border-hover position-relative" style="background-image: url('images/man.jpg')">
                    <div class="text-left position-absolute text-r-t very-big-text">
                        <span class="emerald">for</span>
                        <br>
                        <span class="f-medium">Men</span>
                    </div>
                </div>
                <div class="block-r-b image-bg position-relative border-hover mt-3" style="background-image: url('images/shoes.jpg')">
                    <div class="position-absolute add2cart text-center">
                        <a class="bg-white p-3 f-semibold big-text" href="javascript:void(0)">
                            <span>Shoes</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container no-gutters mx-auto mt-6">
        <div class="text-center">
             <span class="f-medium sub-header-text">
                Featured Products
            </span>
        </div>
        <div>
            <nav class="text-center mt-4 not-active">
                <a class="mx-2 big-text f-medium active slider-nav-item" onclick="slideTo(0)" href="javascript:void(0)">
                    Best Sellers
                </a>
                <a class="mx-2 big-text f-medium slider-nav-item" onclick="slideTo(1)" href="javascript:void(0)">
                    New Items
                </a>
                <a class="mx-2 big-text f-medium slider-nav-item" onclick="slideTo(2)" href="javascript:void(0)">
                    Sales Items
                </a>
            </nav>
        </div>
        <div class="mt-4">
            <div id="slider" class="carousel slide" data-ride="carousel">
                <div class="carousel-indicators slider-indicators">
                    <a class="active rounded-circle mx-1" href="javascript:void(0)" data-target="#slider"
                       data-slide-to="0"></a>
                    <a class="rounded-circle mx-1" href="javascript:void(0)" data-target="#slider"
                       data-slide-to="1"></a>
                    <a class="rounded-circle mx-1" href="javascript:void(0)" data-target="#slider"
                       data-slide-to="2"></a>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="container no-gutters">
                            <div class="row">
                                {{#each bestItems}}
                                    {{>medium_item}}
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="container no-gutters">
                            <div class="row">
                                {{#each newestItems}}
                                    {{>medium_item}}
                                {{/each}}

                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="container no-gutters">
                            <div class="row">
                                {{#each salesItems}}
                                    {{>medium_item}}
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mx-auto mt-8">
        <div class="row d-flex justify-content-between">
            <div class="col-12 col-md-4 col-lg-3 px-2 text-center border-right mb-5">
                <div>
                    <img class="img-advantage" src="images/truck.png"/>
                </div>
                <div class="mt-3">
                    <span class="big-text f-medium not-active">Free shipping</span>
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-3 px-2 text-center mb-5">
                <div>
                    <img class="img-advantage" src="images/support.png"/>
                </div>
                <div class="mt-3">
                    <span class="big-text f-medium not-active">Support Customers</span>
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-3 px-2 text-center border-left mb-5">
                <div>
                    <img class="img-advantage" src="images/shield.png"/>
                </div>
                <div class="mt-3">
                    <span class="big-text f-medium not-active">Secure Payments</span>
                </div>
            </div>
        </div>
    </div>
    <div class="image-bg pt-5 pb-4 mt-3">
        <div class="container no-gutters mx-auto text-center">
            <div>
                <span class="sub-header-text">
                    Get Discount 30% Off
                </span>
                <br>
                <span>
                    Subscribe for our newsletters and get 30% discount!
                </span>
            </div>
            <div class="mt-4 row">
                <div class="col-12 col-md-10 col-lg-8 mx-auto">
                    <form action="" method="POST">
                        <div class="form-row">
                            <div class="form-group col-12 col-md-8">
                                <input type="email" class="rounded-0 form-control" id="email"
                                       placeholder="Enter your email address">
                            </div>
                            <div class="col-5 col-12 col-md-4">
                                <button type="submit" class="rounded-0 btn bg-red text-white w-100">Subscribe</button>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>

</main>
{{>footer}}