<main class="container-fluid no-gutters p-0 h-100">
    <div class="row no-gutters h-100">
        {{>admin_navbar}}
        <div class="col-8 col-md-9">
            <div class="row no-gutters">
                {{>admin_header}}
            </div>
            <div class= "p-4">
                {{#each items}}
                    <div class="row no-gutters mb-3">
                        <div class="col-12 col-md-10 col-lg-8 mx-auto">
                            <div class="row no-gutters d-flex justify-content-between align-items-center py-2 px-3 bg-white">
                                <div class="col-9">
                                    <div class="row no-gutters d-flex justify-content-between align-items-center">
                                        <div class="col-2 col-lg-1">
                                            <div class="image-bg square-bg" style="background-image: url('{{preview}}')"></div>
                                        </div>
                                        <div class="col-10 col-lg-11 pl-3">
                                    <span class="medium-text f-medium">
                                        {{name}}
                                    </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="very-big-text text-right">
                                        <a class="align-baseline text-success " target="_blank" href="catalog/{{this.category.alias}}/{{alias}}" ><ion-icon name="eye"></ion-icon></a>
                                        <a class="align-baseline text-primary ml-3" href="{{../baseUrl}}/edit/{{_id}}" ><ion-icon name="create"></ion-icon></a>
                                        <a class="align-baseline text-danger ml-3" href="{{../baseUrl}}/remove/{{_id}}" ><ion-icon name="trash"></ion-icon></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>