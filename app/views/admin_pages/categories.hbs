<main class="container-fluid no-gutters p-0 h-100">
    <div class="row no-gutters h-100">
        {{>admin_navbar}}
        <div class="col-8 col-md-9">
            <div class="row no-gutters">
                {{>admin_header}}
            </div>
            <div class="p-4">
                {{#each categories}}
                    <div class="row no-gutters mb-3">
                        <div class="col-12 col-md-10 col-lg-8 mx-auto">
                            <div class="row no-gutters d-flex justify-content-between align-items-center py-2 px-3 bg-white">
                                <div class="col-9">
                                    <div class="row no-gutters d-flex justify-content-between align-items-center">
                                        <div class="col-2 col-lg-1">
                                            <a class="green" href="{{../baseUrl}}/items/{{alias}}">
                                                <ion-icon class="very-big-text align-middle" name="filing"></ion-icon>
                                            </a>
                                        </div>
                                        <div class="col-10 col-lg-11 pl-3">
                                        <span class="medium-text f-medium">
                                            {{name}}
                                        </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="very-big-text text-right">
                                        <a class="align-baseline text-primary" href="{{../baseUrl}}/edit/{{_id}}" ><ion-icon name="create"></ion-icon></a>
                                        <a class="align-baseline text-danger mx-3" href="{{../baseUrl}}/remove/{{alias}}" ><ion-icon name="trash"></ion-icon></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>


        </div>
    </div>
</main>